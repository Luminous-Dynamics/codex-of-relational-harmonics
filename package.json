{
  "name": "codex-of-relational-harmonics",
  "version": "1.0.0-genesis",
  "description": "The Codex of Relational Harmonics and the Luminous Library of Evolving Resonant Co-creationism (ERC) - A living philosophical system for conscious relational evolution",
  "main": "scripts/build-index.js",
  "type": "module",
  "scripts": {
    "validate": "node scripts/validate-data.js",
    "generate-docs": "node scripts/generate-markdown.js",
    "build": "node scripts/build-index.js",
    "dev": "npm run validate && npm run generate-docs",
    "test": "npm run validate",
    "validate-content": "node tools/sacred-content-validator.cjs validate",
    "fix-content": "node tools/sacred-content-validator.cjs fix",
    "check-file": "node tools/sacred-content-validator.cjs check-file",
    "generate-images": "node tools/sacred-image-generator.cjs all",
    "generate-glyph-cards": "node tools/sacred-image-generator.cjs glyph-cards",
    "generate-badges": "node tools/sacred-image-generator.cjs badges",
    "verify-images": "node tools/sacred-image-generator.cjs verify",
    "generate-sigils": "node tools/sacred-sigil-generator.cjs all",
    "generate-applied-sigils": "node tools/sacred-sigil-generator.cjs applied-harmonies",
    "generate-harmony-sigils": "node tools/sacred-sigil-generator.cjs pure-harmonies",
    "verify-sigils": "node tools/sacred-sigil-generator.cjs verify",
    "sigil-meanings": "node tools/sacred-sigil-generator.cjs meanings",
    "sacred-validate": "npm run validate-content && npm run verify-images && npm run verify-sigils",
    "sacred-build": "npm run fix-content && npm run generate-images && npm run generate-sigils",
    "start": "python -m http.server 8000"
  },
  "keywords": [
    "philosophy",
    "relational-harmonics",
    "consciousness",
    "spiritual-practice",
    "meta-philosophy",
    "co-creation",
    "infinite-love-praxis"
  ],
  "author": "Genesis Circle Contributors",
  "license": "CC-BY-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luminous-Dynamics/codex-of-relational-harmonics.git"
  },
  "bugs": {
    "url": "https://github.com/Luminous-Dynamics/codex-of-relational-harmonics/issues"
  },
  "homepage": "https://github.com/Luminous-Dynamics/codex-of-relational-harmonics#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "ajv": "^8.12.0"
  },
  "dependencies": {
    "canvas": "^2.11.2"
  }
}